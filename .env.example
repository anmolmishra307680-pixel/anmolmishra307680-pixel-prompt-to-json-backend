# ðŸ”§ Environment Configuration Template
# Copy to .env and customize for your deployment

# Database Configuration
DATABASE_URL=sqlite:///prompt_to_json.db
# DATABASE_URL=postgresql://user:pass@localhost/prompt_to_json  # For PostgreSQL

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Performance Settings
MAX_PROMPT_LENGTH=2000
MAX_RL_ITERATIONS=10
BATCH_SIZE=32
CACHE_SIZE=1000
TIMEOUT_SECONDS=30

# Web Server Configuration
WEB_PORT=8501
API_PORT=5000

# Security Settings
RATE_LIMIT=1000
# Requests per hour per IP

ENABLE_CORS=false
# Set to true for cross-origin requests

# Analytics & Monitoring
ENABLE_ANALYTICS=true
PERFORMANCE_MONITORING=true

# Production Features
DOCKER_MODE=false
PRODUCTION_MODE=false

# Optional: External Services
# REDIS_URL=redis://localhost:6379
# ELASTICSEARCH_URL=http://localhost:9200

# Optional: LLM Integration (Future)
# OPENAI_API_KEY=your_api_key_here
# ANTHROPIC_API_KEY=your_api_key_here

# File Storage
LOGS_RETENTION_DAYS=30
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
TEST_MODE=false